<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/resimKullanici"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/petsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/resimKullanici"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:text="Pet's Name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dog_or_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:text="CAT/DOG"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/petstype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/resimKullanici"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="45dp"
        android:text="Pet's Type:"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/petsgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/resimKullanici"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="65dp"
        android:text="Pet's Gender:"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"/>


</RelativeLayout>