<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".SendMessage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:navigationIcon="@color/colorPrimaryDark"
        android:background="@android:color/transparent">


        <ImageButton
            android:id="@+id/back_button_3"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/buttons"
            app:srcCompat="@drawable/back_button"
            android:clickable="true"/>

        <ImageView
            android:layout_marginStart="25dp"
            android:id="@+id/profilresim"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/message_box_2"
            android:layout_marginLeft="25dp" />


        <TextView
            android:id="@+id/kullaniciadmesaj2"
            android:layout_marginStart="10dp"
            android:text="Hasan Günyüzügörmez"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_above="@+id/relati2"
        android:layout_below="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/relati2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/mesajgirialani2"
            android:layout_marginBottom="2dp"
            android:padding="8dp"
            android:layout_marginEnd="50sp"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Enter your message..."
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            android:background="@drawable/input_design"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50sp" />


        <ImageButton
            android:id="@+id/gonderbtn2"
            android:layout_marginEnd="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/buttons"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/send_button"/>


    </RelativeLayout>

</RelativeLayout>