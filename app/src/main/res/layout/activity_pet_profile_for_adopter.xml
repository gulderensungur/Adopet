<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paws2"
    tools:context=".Pet_Profile_forAdopter">

    <ImageView
        android:id="@+id/Pet_spec_photo"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/pet9" />

    <TextView
        android:id="@+id/p_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="15dp"
        android:text="Pet Owner Name:"
        android:textColor="#292222"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pet_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/p_owner_name"
        android:text="Pet's Name:"
        android:textColor="#292222"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pet_type_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/pet_name_1"
        android:text="Pet's Type:"
        android:textColor="#292222"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pet_age_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/pet_type_1"
        android:text="Pet's Age:"
        android:textColor="#292222"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pet_other_features_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/pet_age_1"
        android:text="Pet's Other Features:"
        android:textColor="#292222"
        android:textSize="20sp" />

    <Button
        android:id="@+id/send_message_toowner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/petgender"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Send a Message"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/back_button_1"
        android:background="@drawable/input_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="300dp"
        android:text="Back"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pet_other_features_1"
        android:layout_marginLeft="15dp"
        android:text="Pet:"
        android:textColor="#292222"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/petgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet's Gender:"
        android:textColor="#292222"
        android:layout_below="@+id/pet"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"/>

</RelativeLayout>