<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pet13"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/icony" />

    <Button
        android:id="@+id/log_out_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="LOG OUT"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Pet_owner_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/log_out_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="PET OWNER"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Adopter_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Pet_owner_role"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="ADOPTER"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</RelativeLayout>
